<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oscarcasarezruiz.sensorfingerprinting">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:screenOrientation="portrait"
        android:fullBackupContent="false"
        android:theme="@style/Theme.SensorFingerprinting">
        <activity android:name="com.oscarcasarezruiz.sensorfingerprinting.SensorFingerprintActivity" />
        <activity android:name="com.oscarcasarezruiz.sensorfingerprinting.InstructionsActivity" />
        <activity android:name="com.oscarcasarezruiz.sensorfingerprinting.SensorDataActivity" />
        <activity android:name="com.oscarcasarezruiz.sensorfingerprinting.FeatureActivity" />
        <activity android:name="com.oscarcasarezruiz.sensorfingerprinting.DisclaimerActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>